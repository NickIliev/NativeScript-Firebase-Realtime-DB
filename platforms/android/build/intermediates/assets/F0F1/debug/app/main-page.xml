<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ScrollView>
        <StackLayout>
            <Label text="Firebase DB Test" class="title"/>

            <Button text="Set value in DB" tap="setValue" />
            <Button text="Update value w/Overwrtting" tap="updateValue" />
            <!--<Button text="Update value by key" tap="updateValueByKey" />-->
            <Button text="Add new key to value" tap="updateValueNoOverwritting" />
            <Button text="Query Values" tap="queryValues" />
            

            <Button text="Set array in DB" tap="setArray" />
            <Button text="Update w/overwrtting in array" tap="updateItemInArray" />
            <Button text="Query data array from Firebase DB" tap="queryData" />

            <Button text="Push data to Firebase DB" tap="pushData" />

        </StackLayout>
    </ScrollView>
</Page>